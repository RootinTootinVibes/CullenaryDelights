@{
    ViewData["Title"] = "Login Page";
}

<div class="text-center">
    <h1 class="display-4">Login Page</h1>
    <form action="/Home/Login" method="post">
        <div class="form-group">
            <label for="userName"><b>Username</b></label>
            <input type="text" placeholder="Enter Username" class="form-control" name="userName" required>

            <label for="userPassword"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" class="form-control" name="userPassword" required>

            <button type="submit">Login</button>
        </div>
    </form>

    <div class="mt-3">
        <p>
            Don't have an account?
            <a asp-controller="Home" asp-action="Register">Sign up here</a>
        </p>
    </div>
</div>